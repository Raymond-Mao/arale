{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "@packages": ["packages/*"]
    }
  },
  "include": ["./typings.d.ts", "packages/**/*.tsx", "packages/**/*.ts"],
  "exclude": ["node_modules", "lib", "es", "dist", "typings"]
}
